---
import { Image } from "astro:assets";
import myImage from "../assets/1.png";
import anotherImage from "../assets/6b26ff423c95c487cf3ceeb2819611cb.gif";
import threeImage from "../assets/a5728664014feb0863f26a7d64a1bd77.gif";
import fourImage from "../assets/6c73a4b173064baaa05b3534bc393c3b.gif";
import ArrowScroll from "../assets/arrow.svg";
const imagenes = [myImage, anotherImage, threeImage, fourImage];
const randomIndex = Math.floor(Math.random() * imagenes.length);
---

<section class="judas">
    <div class="judas-text">
        <h1 class="title">Judas</h1>
        <p>
            Hey, how's it going? I'm Judas, a young programmer who's super into
            technology. I'm always learning, trying to get better at what I do
            every day. I'm into anime, manga, sports, and I'm always trying to
            learn more about what I do. You'll usually find me either listening
            to music or programming.
        </p>
    </div>
    <div class="img-hero">
        <Image id="carrusel" src={imagenes[randomIndex]} alt="carrusel" />
    </div>
</section>

<div class="scroll-container">
    <h1>Scroll Down</h1>
    <ArrowScroll class="scroll-pointer" />
</div>

<style>
    .judas,
    .judas * {
        box-sizing: border-box;
    }
    .judas {
        display: flex;
        aling-items: center;
        justify-content: center;
        height: 100vh;
        gap: 80px;
        flex-wrap: wrap-reverse;
    }
    .judas-text {
        max-width: 500px;
    }

    .title {
        font-family: var(--font-test), sans-serif;
        color: #ffffff;
        font-size: 80px;
        margin-bottom: 20px;
        font-weight: bold;
        animation: neonPulse 1.5s infinite alternate;
        text-align: inherit;
        text-wrap: wrap;
    }

    .judas-text p {
        color: #ffffff;
        font-size: 22px;
        line-height: 1.5;
        font-family: var(--font-p);
        text-align: inherit;
        text-wrap: wrap;
    }

    .img-hero img {
        width: 400px;
        height: 400px;
        border: 1px solid #ffffff;
        box-shadow: 0 0 100px #d37090;
        object-fit: cover;
        border-radius: 12px;
    }

    .scroll-container {
        font-family: var(--font-test), sans-serif;
        color: #ffffff;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: 0rem;
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    .scroll-container h1 {
        font-size: 2.5rem;
        margin: 0px;
        text-align: center;
        text-wrap: wrap;
        animation: neonPulse 1.5s infinite alternate;
    }

    .scroll-pointer {
        bottom: 20rem;
    }

    @media (max-width: 980px) {
        .scroll-container {
            display: none;
        }
        .judas {
            margin-top: 10rem;
        }
    }

    @keyframes neonPulse {
        from {
            text-shadow:
                0 0 5px #black,
                0 0 10px #d37090,
                0 0 20px #d37090,
                0 0 30px #d37090;
        }
        to {
            text-shadow:
                0 0 10px #fff,
                0 0 20px #d37090,
                0 0 40px #d37090,
                0 0 60px #d37090;
        }
    }
</style>
