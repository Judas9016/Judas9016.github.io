---

<section class="skills">
    <h1 class="title">üß† Skills</h1>

    {
        skills.map((category) => (
            <div class="category">
                <h2>
                    {category.icon} {category.title}
                </h2>
                <div class="grid">
                    {category.items.map(({ name, icon: Icon }) => (
                        <div class="skill">
                            <Icon />
                            <span>{name}</span>
                        </div>
                    ))}
                </div>
            </div>
        ))
    }
</section>

<style>
    .skills {
        animation: neonTitle 2s infinite alternate;
        padding: 2rem;
        font-family: var(--font-test);
        display: flex;
        flex-direction: column;
        gap: 2rem;
        color: #fff;
    }

    .title {
        text-align: center;
        font-size: 3rem;
        color: #ffffff;
        animation: neonTitle 2s infinite alternate;
    }

    .category {
        background: rgba(50, 0, 70, 0.3);
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid #7a00a8;
        box-shadow: 0 0 10px #a200ff33;
    }

    .category-title {
        font-size: 1.8rem;
        color: #cc66ff;
        text-shadow:
            0 0 5px #cc66ff,
            0 0 10px #9900cc;
        animation: neonText 1.5s ease-in-out infinite alternate;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
    }

    .skill {
        background: rgba(170, 0, 255, 0.2);
        border: 1px solid #aa00ff;
        border-radius: 10px;
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
    }

    .skill:hover {
        transform: scale(1.05);
        box-shadow:
            0 0 10px #d370ff,
            0 0 20px #d370ff;
    }

    .skill svg {
        width: 22px;
        height: 22px;
        fill: #fff;
    }

    .skill span {
        font-size: 15px;
        color: #ffffff;
        text-shadow: 0 0 3px #ff99ff;
    }

    @media (max-width: 600px) {
        .grid {
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        }

        .skill {
            flex-direction: column;
            justify-content: center;
        }

        .skill span {
            text-align: center;
            font-size: 14px;
        }
    }

    @keyframes neonTitle {
        from {
            text-shadow:
                0 0 5px #ff00ff,
                0 0 10px #9900cc;
        }
        to {
            text-shadow:
                0 0 15px #ff00ff,
                0 0 25px #ff00ff;
        }
    }

    @keyframes neonText {
        from {
            text-shadow: 0 0 4px #cc66ff;
        }
        to {
            text-shadow:
                0 0 12px #cc66ff,
                0 0 16px #9900cc;
        }
    }
</style>
